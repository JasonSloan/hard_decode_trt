{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) 启动",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/workspace/pro",
            "args": ["hard_decode"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/workspace",
            "environment": [
                {
                "name": "LD_LIBRARY_PATH",
                "value": "/root/host_container_mapping_dir/container1/hard_decode_trt/ffmpeg-build/lib:/root/host_container_mapping_dir/container1/hard_decode_trt/opencv-build/lib:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build"
        }
    ]
}